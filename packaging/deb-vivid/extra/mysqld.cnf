#
# The MyBlockchain Commercial Server configuration file.
#
# For explanations see
# http://dev.myblockchain.com/doc/myblockchain/en/server-system-variables.html

[myblockchaind_safe]
pid-file = /var/run/myblockchaind/myblockchaind.pid
socket   = /var/run/myblockchaind/myblockchaind.sock
nice   = 0

[myblockchaind]
user   = myblockchain
pid-file = /var/run/myblockchaind/myblockchaind.pid
socket   = /var/run/myblockchaind/myblockchaind.sock
port   = 3306
basedir    = /usr
datadir    = /var/lib/myblockchain
tmpdir   = /tmp
lc-messages-dir  = /usr/share/myblockchain
explicit_defaults_for_timestamp

# Instead of skip-networking the default is now to listen only on
# localhost which is more compatible and is not less secure.
bind-address = 127.0.0.1

log-error    = /var/log/myblockchain/error.log

# Recommended in standard MyBlockchain setup
sql_mode=NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES

# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links=0
