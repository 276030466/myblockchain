# Use default setting for myblockchaind processes
!include include/default_myblockchaind.cnf
!include include/default_client.cnf

[myblockchaind.1]

# Run the master.sh script before starting this process
#!run-master-sh

log-bin=                 master-bin

skip-name-resolve
bind-address=               ::


[myblockchaind.2]
# Run the slave.sh script before starting this process
#!run-slave-sh

# Append <testname>-slave.opt file to the list of argument used when
# starting the myblockchaind
#!use-slave-opt

log-bin=                    slave-bin
relay-log=                  slave-relay-bin

log-slave-updates
master-retry-count=         10

# Values reported by slave when it connect to master
# and shows up in SHOW SLAVE STATUS;
report-host=                localhost
report-port=                @myblockchaind.2.port
report-user=                root

skip-slave-start
skip-name-resolve
bind-address=               0.0.0.0

# Directory where slaves find the dumps generated by "load data"
# on the server. The path need to have constant length otherwise
# test results will vary, thus a relative path is used.
slave-load-tmpdir=          ../../tmp

[ENV]
MASTER_MYPORT=              @myblockchaind.1.port
MASTER_MYSOCK=              @myblockchaind.1.socket

SLAVE_MYPORT=               @myblockchaind.2.port
SLAVE_MYSOCK=               @myblockchaind.2.socket

