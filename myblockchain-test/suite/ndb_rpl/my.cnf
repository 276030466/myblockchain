!include include/default_myblockchaind.cnf
!include include/default_ndbd.cnf

[cluster_config]
TimeBetweenEpochsTimeout = 30000

[cluster_config.1]
NoOfReplicas=                  2
ndbd=,
ndb_mgmd=
myblockchaind=,
ndbapi=,,,,,,,,,

[cluster_config.slave]
NoOfReplicas=                  1
ndbd=
ndb_mgmd=
myblockchaind=
ndbapi=,,,,

[myblockchaind]
# Make all myblockchainds use cluster
ndbcluster
ndb-wait-connected=30
ndb-wait-setup=120
ndb-cluster-connection-pool=3
slave-allow-batching
ndb-log-orig
# Turn on bin logging
log-bin=                       master-bin
# for performance reasons
ndb-table-temporary=1

ndb-extra-logging=99
# Cluster only supports row format
binlog-format=                 row

[myblockchaind.1.1]

[myblockchaind.1.1]

[myblockchaind.1.slave]

# Append <testname>-slave.opt file to the list of argument used when
# starting the myblockchaind
#!use-slave-opt

log-bin=                      slave-bin
relay-log=                    slave-relay-bin
# Cluster only supports row format
binlog-format=                 row

log-slave-updates
master-retry-count=           10

# Values reported by slave when it connect to master
# and shows up in SHOW SLAVE STATUS;
report-host=                  127.0.0.1
report-port=                  @myblockchaind.1.slave.port
report-user=                  root

skip-slave-start

# Directory where slaves find the dumps generated by "load data"
# on the server. The path need to have constant length otherwise
# test results will vary, thus a relative path is used.
slave-load-tmpdir=            ../../../tmp

[ENV]
NDB_CONNECTSTRING=            @myblockchain_cluster.1.ndb_connectstring
MASTER_MYPORT=                @myblockchaind.1.1.port
MASTER_ERRFILE=               @myblockchaind.1.1.#log-error
MASTER_MYPORT1=               @myblockchaind.2.1.port
MASTER_ERRFILE1=              @myblockchaind.2.1.#log-error

NDB_CONNECTSTRING_SLAVE=      @myblockchain_cluster.slave.ndb_connectstring
SLAVE_MYPORT=                 @myblockchaind.1.slave.port
SLAVE_MYSOCK=                 @myblockchaind.1.slave.socket
SLAVE_ERRFILE=                @myblockchaind.1.slave.#log-error

NDB_BACKUP_DIR=               @cluster_config.ndbd.1.1.BackupDataDir
